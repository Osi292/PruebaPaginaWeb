# ==================================
# WordPress .gitignore
# ==================================

# Archivos y carpetas del core de WordPress
wp-admin/
wp-includes/

# Configuración sensible
wp-config.php

# Archivos temporales y logs
*.log
*.tmp
*.swp
*.swo
*.bak
*.orig
*.save

# Carpetas dinámicas
wp-content/cache/
wp-content/backups/
wp-content/upgrade/
wp-content/uploads/
wp-content/ai1wm-backups/
wp-content/wflogs/

# Plugins y themes descargados (sube solo los que modifiques o crees tú)
# Descomenta si quieres excluirlos:
# wp-content/plugins/
# wp-content/themes/

# Archivos del sistema
.DS_Store
Thumbs.db
ehthumbs.db
desktop.ini

# Composer / Node (si los usas en tu theme o plugin)
vendor/
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Archivos de IDE
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# Archivos de entorno
.env
.env.local
.env.*.local
